{% extends "AppBundle:Budget:layout.html.twig" %}

{% block content %}
<h1>ADD INITIATIVE TO BUDGET {{ idBudget }}</h1>
<p>
	{{ form_start(form) }}
	{{ form_widget(form) }}
	{{ form_end(form) }}
</p>
{% if test == true %}Budget exceed !{% else %}Budget OK{% endif %}
<h2>Current initiatives</h2>
<p>
	<table class="table">
		<tr>
			<td><strong>Title</strong></td>
			<td><strong>Value</strong></td>
		</tr>
	{% for initiative in initiatives%}
		<tr>
			<td>{{ initiative.title }}</td>
			<td>{{ initiative.value }}</td>
		</tr>
	{% endfor %}
	</table>
	
</p>
{% endblock %}
