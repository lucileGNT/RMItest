{% extends "AppBundle:Budget:layout.html.twig" %}

{% block content %}
<h1>ADD INITIATIVE</h1>
<p>
	{{ form_start(form) }}
	{{ form_widget(form) }}
	{{ form_end(form) }}
</p>

<h2>Current initiatives</h2>
<p>
<table class="table">
	<tr>
		<td><strong>Id</strong></td>
		<td><strong>Title</strong></td>
		<td><strong>Value</strong></td>
	</tr>
{% for initiative in initiatives%}
	<tr>
		<td>{{ initiative.id }}</td>
		<td>{{ initiative.title }}</td>
		<td>{{ initiative.value }}</td>
	</tr>
{% endfor %}
	
</p>
{% endblock %}
